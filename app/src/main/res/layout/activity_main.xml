<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color">

    <include layout="@layout/base_title_bar"/>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divideColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/fl_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_msg"
                style="@style/tv_main_bottom"
                android:text="E" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_online"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_online"
                style="@style/tv_main_bottom"
                android:text="M" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_index"
                style="@style/tv_main_bottom"
                android:textColor="@color/bg_color"
                android:text="I"
                android:background="@drawable/heart_burn" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/fl_activi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_activi"
                style="@style/tv_main_bottom"
                android:text="L"
                 />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_info"
                    style="@style/tv_main_bottom"
                    android:text="Y"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>
</LinearLayout>
